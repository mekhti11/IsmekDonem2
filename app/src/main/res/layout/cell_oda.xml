<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="5">

    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:orientation="vertical">

        <TextView
            android:id="@+id/txtOdaAdi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:background="#F4F3F4"
            android:text="Otel Adı"
            android:textStyle="bold"
            android:padding="5dip"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/imgOda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtOdaKapasitesiLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:background="#F4F3F4"
            android:text="Oda Kapasitesi"
            android:textStyle="bold"
            android:padding="5dip"
            android:textSize="18sp"/>

        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
            android:id="@+id/expOdaKapasitesi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:ael_expanded="false"
            app:ael_duration="500"
            app:ael_interpolator="linear"
            app:ael_orientation="vertical">

            <TextView
                android:id="@+id/txtOdaKapasitesi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:background="#F4F3F4"
                android:text="Otel Adı"
                android:padding="5dip"
                android:textSize="18sp"/>
        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F4F3F4"
            android:layout_marginBottom="10dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:background="#F4F3F4"
                android:text="Kişi Başı Fiyat"
                android:gravity="center"
                android:padding="5dip"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/txtKisiBasiFiyat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:background="#FFF"
                android:layout_margin="1dip"
                android:text="00,00 TL"
                android:gravity="center"
                android:padding="5dip"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F4F3F4"
            android:layout_marginBottom="10dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:background="#F4F3F4"
                android:text="Toplam Oda Fiyat"
                android:gravity="center"
                android:padding="5dip"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/txtToplamOdaFiyat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:background="#FFF"
                android:layout_margin="1dip"
                android:text="00,00 TL"
                android:gravity="center"
                android:padding="5dip"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
